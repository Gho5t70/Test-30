class Solution {
public:
    string sortSentence(string s) {
      vector<string> words;
        stringstream ss(s);
        string word;
        while(ss>>word){
         words.push_back(word);   
        }
       sort(words.begin(), words.end(), [](const string &a, const string &b) {
    return a.back() < b.back();
});

        string result;
        for(auto i:words){
            i.pop_back();
            result+=i+" ";
        }
        result.pop_back();
        return result;
    }
};
